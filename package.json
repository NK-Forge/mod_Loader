{
  "name": "space_marine_2_mod_manager",
  "version": "0.1.0",
  "description": "A desktop app to manage and toggle mods for Warhammer 40K: Space Marine 2 â€” includes save backups, auto-detect, and mod profiles.",
  "author": "Nevin Kadlec (NK Forge)",
  "license": "MIT",
  "private": true,
  "type": "commonjs",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build && electron-builder",
    "start": "electron ./dist-electron/main.js",
    "type-check": "tsc --noEmit",
    "bundle:riven": "powershell -ExecutionPolicy Bypass -File scripts/make-riven-bundle.ps1"
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "axios": "^1.13.2",
    "chokidar": "^4.0.3",
    "electron-is-dev": "^2.0.0",
    "fs-extra": "^11.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/chokidar": "^1.7.5",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^9.10.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3",
    "vite": "^5.3.5",
    "vite-plugin-checker": "^0.7.2",
    "vite-plugin-electron": "^0.14.1",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "appId": "com.nkforge.wh40kmodmanager",
    "productName": "WH40K Mod Manager",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
